<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/overlay"
        android:padding="@dimen/horizontal_spacing"
        android:orientation="vertical">
        <TextView
            android:id="@+id/summary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:textColor="@android:color/white"
            style="@style/Emphasis" />
        <TextView
            android:id="@+id/details_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:text="@null"
            android:textColor="@android:color/white"
            android:textColorLink="@color/highlight"
            style="@style/Body" />
        <TextView
            android:id="@+id/override_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:text="@null"
            android:textColor="@android:color/white"
            android:visibility="gone"
            style="@style/Body" />
        <LinearLayout
            android:id="@+id/mode_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_label"
                android:textColor="@android:color/white"
                style="@style/Body" />
            <TextView
                android:id="@+id/default_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@null"
                android:textColor="@android:color/white"
                style="@style/Emphasis" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_separator"
                android:textColor="@android:color/white"
                style="@style/Body" />
            <TextView
                android:id="@+id/upgrade_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@null"
                android:textColor="@android:color/white"
                style="@style/Body" />
        </LinearLayout>
        <TextView
            android:id="@+id/contact_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_spacing"
            android:text="@null"
            android:textColor="@android:color/white"
            android:textColorLink="@color/highlight"
            style="@style/Body" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_spacing">
            <Button
                android:id="@+id/dismiss_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/button"
                android:text="@null"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                style="@style/Body" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
