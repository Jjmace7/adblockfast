{
  "manifest_version": 2,
  "name": "Adblock Fast",
  "version": "1.7.0",
  "description":
      "The worldâ€™s fastest ad blocker! Same blocking, 8x more accelerated webpages.",
  "icons": {
    "16": "images/16.png", "48": "images/48.png", "128": "images/128.png"
  },
  "permissions": [
    "activeTab",
    "alarms",
    "background",
    "browsingData",
    "chrome://favicon/",
    "contextMenus",
    "cookies",
    "declarativeContent",
    "fontSettings",
    "gcm",
    "identity",
    "idle",
    "notifications",
    "pageCapture",
    "power",
    "proxy",
    "storage",
    "system.cpu",
    "system.display",
    "system.memory",
    "tabCapture",
    "tabs",
    "topSites",
    "tts",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "scripts/utils.js",
      "scripts/blocking.js",
      "scripts/background.js"
    ]
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "css": ["stylesheets/content.css"],
    "js": [
      "scripts/utils.js",
      "scripts/blocking.js",
      "scripts/hiding.js",
      "scripts/content.js"
    ],
    "run_at": "document_start",
    "all_frames": true
  }],
  "browser_action": {
    "default_icon": {
      "19": "images/blocked/19.png", "38": "images/blocked/38.png"
    },
    "default_title": "Unblock ads on this site"
  }
}
