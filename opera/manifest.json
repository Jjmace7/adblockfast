{
  "manifest_version": 2,
  "name": "Adblock Fast",
  "version": "1.4.1",
  "description": "The worldâ€™s fastest ad blocker! Same blocking, 8x more accelerated page loading.",
  "icons": {
    "16": "chrome/images/16.png", "48": "chrome/images/48.png", "128": "chrome/images/128.png"
  },
  "developer": { "name": "Rocketship", "url": "https://rocketshipapps.com/" },
  "permissions": [
    "activeTab",
    "alarms",
    "browsingData",
    "contextMenus",
    "cookies",
    "declarativeContent",
    "fontSettings",
    "identity",
    "idle",
    "notifications",
    "pageCapture",
    "power",
    "storage",
    "system.cpu",
    "system.display",
    "system.memory",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "chrome/scripts/utils.js", "chrome/scripts/blocking.js", "chrome/scripts/background.js"
    ]
  },
  "content_scripts": [{
    "matches": [ "http://*/*", "https://*/*" ],
    "css": [ "chrome/stylesheets/content.css" ],
    "js": [
      "chrome/scripts/utils.js",
      "chrome/scripts/blocking.js",
      "chrome/scripts/hiding.js",
      "chrome/scripts/content.js"
    ],
    "run_at": "document_start",
    "all_frames": true
  }],
  "browser_action": {
    "default_icon": { "19": "chrome/images/blocked/19.png", "38": "chrome/images/blocked/38.png" },
    "default_title": "Unblock ads on this site"
  }
}
